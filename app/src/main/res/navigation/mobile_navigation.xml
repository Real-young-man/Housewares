<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    android:windowSoftInputMode="adjustPan"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.ssj.housewares.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_housewares"
        android:name="com.ssj.housewares.ui.housewares.HousewaresFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_housewares" />

    <fragment
        android:id="@+id/navigation_setting"
        android:name="com.ssj.housewares.ui.setting.SettingFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_setting" />
</navigation>
